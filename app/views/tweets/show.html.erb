<h2>課題内容</h2>
<div class="tweet">

<p><%= @tweet.title %></p>
  

<!-- タスク追加フォーム -->
<%= form_with(model: [@tweet, Task.new], local: true) do |f| %>
  <%= f.text_field :content, placeholder: "タスク詳細" %>
  <%= f.submit "追加" %>
<% end %>

<!-- タスク一覧 -->
<ul>
  <% @tweet.tasks.each do |task| %>
    <li>
      <%= form_with(model: [@tweet, task], method: :patch, local: true) do |f| %>
        <%= f.check_box :done, { onchange: "this.form.submit();" } %>
        <%= task.content %>
        <%# <% if task.done %>
          <%# :チェックマーク_緑: %>
        <%# <% end %>
      <% end %>

<!-- 編集ボタン -->
  <%= link_to "編集", edit_tweet_task_path(@tweet, task) %>
  <!-- 削除ボタン（確認あり） -->
      <%= button_to "削除", tweet_task_path(@tweet, task),
                method: :delete,
                data: { confirm: "本当に削除しますか？" } %>
    </li>
  <% end %>
</ul>

  
    <% if user_signed_in? %>
      <% if current_user.already_liked?(@tweet) %>
        <%= link_to tweet_like_path(@tweet), data: { turbo_method: :delete } do %>
            <i class="fas fa-heart"></i><%= @tweet.likes.count %>
          <p>いいねを取り消す</p>
        <% end %>
      <% else %>
        <%= link_to tweet_likes_path(@tweet), data: { turbo_method: :post }  do %>
            <i class="far fa-heart"></i><%= @tweet.likes.count %>
          <p>いいね</p>
        <% end %>
      <% end %>
    <% else %>
        <i class="far fa-heart"></i><%= @tweet.likes.count %>
      <p>いいねの数 = </p><%= @tweet.likes.count %>
    <% end %>
</div>

<h2>いいねしたユーザー</h2>
<% @tweet.liked_users.each do |user| %>
  <li><%= user.name %></li>
<% end %>



<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

    <% if user_signed_in? %>
    <%= form_with(model: [@tweet, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>


<%= link_to "Tweet一覧に戻る", tweets_path %>