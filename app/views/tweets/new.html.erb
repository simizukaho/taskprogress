<%= stylesheet_link_tag 'tweets_new', :media => "all" %>

<div class="background-bar bar-1">🚀  🌍  ✨ C 🔧</div>
<div class="background-bar bar-2">🌕  ✈️ 🌌 🧪 </div>
<div class="background-bar bar-3">👾 </div>
<div class="background-bar bar-4">🌎 </div>
<div class="background-bar bar-5">✨  ✨</div>
<div class="background-bar bar-6">🌟 🌟</div>

<div class="post-card">
<h1 class="page-title">新規投稿</h1>

  <% if @tweet.errors.any? %>
    <div class="error-messages">
      <h2>エラーがあります：</h2>
      <ul>
        <% @tweet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @tweet do |f| %>
<div class="form-group">
    <%= f.label :title, 'やること', class: "form-label" %>
    <%= f.text_field :title, class: "input-field" , placeholder: "例：12/15 ○○文字のレポート" %>
  </div>

<div class="form-actions">
  <%= f.submit "投稿する", class: "btn submit-btn" %>
  <%= link_to "一覧ページに戻る", tweets_path, class: "btn back-btn" %>
</div>
<% end %>
</div>