<%= stylesheet_link_tag 'registrations-edit', media: "all" %>

<div class="account-edit-card">
 <h2 class="card-title">アカウント編集</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

   <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "form-control" %>
  </div>
  
   <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :profile, "コメント" %>
  <%= f.text_area :profile, autofocus: true, class: "form-control" %>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="notice-message">現在、以下のメールアドレスの確認を待っています: <%= resource.unconfirmed_email %></div>
  <% end %>



  <div class="form-actions">
    <%= f.submit "更新する" , class: "btn btn-primary" %>
  </div>
<% end %>
</div>

<div class="account-delete-card">
<h3>アカウントを削除</h3>
<p>アカウントを削除したい場合はこちら。</p>
 <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除してもよろしいですか？", turbo_confirm: "本当に削除してもよろしいですか？" }, method: :delete, class: "btn btn-danger delete-btn" %>
</div>

<div class="back-link">
<%= link_to "戻る", :back, class: "btn btn-secondary" %>
</div>
