<h2>アカウント編集</h2>

<div class="account-edit-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

   <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: "form-control" %>
  </div>
  
   <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="notice-message">現在、以下のメールアドレスの確認を待っています: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, "新しいパスワード" %> <small>(変更しない場合は空欄のままで構いません)</small>
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
       <small class="hint">最低<%= @minimum_password_length %>文字</small>
    <% end %>
  </div>

   <div class="form-group">
    <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :current_password, "現在のパスワード" %> <small>(変更を反映するために必要です)</small>
    <%= f.password_field :current_password, autocomplete: "current-password" , class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "更新する" , class: "btn btn-primary" %>
  </div>
<% end %>
</div>

<h3>アカウントを削除</h3>

<p>アカウントを削除したい場合はこちら。</p>
 <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除してもよろしいですか？", turbo_confirm: "本当に削除してもよろしいですか？" }, method: :delete, class: "btn btn-danger" %>

<div class="back-link">
<%= link_to "戻る", :back, class: "btn btn-secondary" %>
</div>
