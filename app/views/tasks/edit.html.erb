<h2>タスクを編集</h2>

<div class="task-edit-form">
<%= form_with(model: [@tweet, @task], local: true) do |f| %>

<div class="form-group">
  <%= f.label :content, "内容" %>
  <%= f.text_field :content , class: "form-control" %>
</div>

  <%#= f.label :done, "完了" %>
  <%#= f.check_box :done %>

<div class="form-actions">
  <%= f.submit "更新", class: "btn btn-primary" %>
</div>

<% end %>
</div>

<!-- 削除ボタン（確認あり） -->
      <%#= button_to "削除", tweet_task_path(@tweet, @task),
                method: :delete,
                data: { confirm: "本当に削除しますか？" } %>

<div class="back-link">
  <%= link_to "← 戻る", tweet_path(@tweet), class: "btn btn-secondary" %>
</div>
