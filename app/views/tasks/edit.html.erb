<h2>タスクを編集</h2>
<%= form_with(model: [@tweet, @task], local: true) do |f| %>
  <%= f.label :content, "内容" %>
  <%= f.text_field :content %>
  <%= f.label :done, "完了" %>
  <%= f.check_box :done %>
  <%= f.submit "更新" %>
<% end %>

<!-- 削除ボタン（確認あり） -->
      <%= button_to "削除", tweet_task_path(@tweet, @task),
                method: :delete,
                data: { confirm: "本当に削除しますか？" } %>

<%= link_to "戻る", tweet_path(@tweet) %>
